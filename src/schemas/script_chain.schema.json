{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ScriptChain",
  "type": "object",
  "properties": {
    "chain_id": {
      "type": "string",
      "description": "Unique identifier for the script chain"
    },
    "nodes": {
      "type": "array",
      "description": "List of node configurations in the chain",
      "items": {
        "$ref": "node_config.schema.json"
      }
    },
    "levels": {
      "type": "object",
      "description": "Mapping of execution levels to node IDs (auto-generated based on dependencies)",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "max_parallel": {
      "type": "integer",
      "description": "Maximum number of parallel executions",
      "minimum": 1,
      "default": 5
    },
    "persist_intermediate_outputs": {
      "type": "boolean",
      "description": "Whether to persist output of each node in the chain",
      "default": true
    },
    "context_manager": {
      "type": "object",
      "description": "Configuration for the global context manager",
      "properties": {
        "persistence": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to persist context between executions",
              "default": true
            },
            "storage_type": {
              "type": "string",
              "enum": ["memory", "file", "database"],
              "description": "Type of storage for context persistence",
              "default": "memory"
            }
          }
        }
      }
    },
    "callbacks": {
      "type": "array",
      "description": "List of callback configurations for chain events",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["logging", "metrics", "debug"],
            "description": "Type of callback"
          },
          "config": {
            "type": "object",
            "description": "Configuration for the callback"
          }
        },
        "required": ["type"]
      }
    },
    "error_handling": {
      "type": "object",
      "description": "Error handling configuration",
      "properties": {
        "continue_on_error": {
          "type": "boolean",
          "description": "Whether to continue execution when non-critical errors occur",
          "default": true
        },
        "max_retries": {
          "type": "integer",
          "description": "Maximum number of retries for failed nodes",
          "minimum": 0,
          "default": 0
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Metrics collection configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to collect execution metrics",
          "default": true
        },
        "track_tokens": {
          "type": "boolean",
          "description": "Whether to track token usage",
          "default": true
        },
        "track_execution_times": {
          "type": "boolean",
          "description": "Whether to track node execution times",
          "default": true
        },
        "track_provider_usage": {
          "type": "boolean",
          "description": "Whether to track usage by provider",
          "default": true
        }
      }
    },
    "tool_service": {
      "type": "object",
      "description": "Configuration for the tool service",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable tool service",
          "default": true
        },
        "tools": {
          "type": "array",
          "description": "List of available tools",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the tool"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the tool is enabled",
                "default": true
              }
            },
            "required": ["name"]
          }
        }
      }
    }
  },
  "required": ["nodes"],
  "additionalProperties": false
} 